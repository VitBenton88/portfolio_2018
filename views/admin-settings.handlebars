<div class="container-fluid settings">
  <div class="row">

    {{> admin/menus/main menu-settings=true}}

    <div class="col-10 col-xl-11">
      <div class="row">
        {{> admin/notifications}}

        {{> admin/heading heading='Settings'}}

        <div class="container">
            <div class="section-head alert alert-primary d-flex justify-content-between align-items-center" role="alert" data-toggle="collapse" href="#information">
              Site Information
              <div class="section-toggle-controls">
                <i class="fa fa-expand toggle-control" aria-hidden="true"></i>
                <i class="fa fa-minus toggle-control" aria-hidden="true"></i>
              </div>
            </div>

            <div id="information" class="collapse">
              {{> admin/settings/info}}
            </div>
        </div>

        <div class="container">
            <div class="section-head alert alert-secondary d-flex justify-content-between align-items-center" role="alert" data-toggle="collapse" href="#meta">
              Meta
              <div class="section-toggle-controls">
                <i class="fa fa-expand toggle-control" aria-hidden="true"></i>
                <i class="fa fa-minus toggle-control" aria-hidden="true"></i>
              </div>
            </div>

            <div id="meta" class="collapse">
              {{> admin/settings/meta}}
            </div>
        </div>

      </div>
    </div>
  </div>
</div>