<div class="container notifications mt-3">
    <div class="row justify-content-center">
        {{#each success}}
            <div class="alert alert-success alert-dismissible fade show mb-3 col-10" role="alert">
                <strong>{{this}}</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {{/each}}

        {{#each error}}
            <div class="alert alert-warning alert-dismissible fade show mb-3 col-10" role="alert">
                <strong>Error: </strong> {{this}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {{/each}}
    </div>
</div>