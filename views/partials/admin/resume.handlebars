{{#each portfolio}}
    <h5>Resume</h5>
    <form action="/updateresume" method="POST">
        <textarea name="resume" id="resumeEditor">{{resume}}</textarea>
        <input name="_id" type="hidden" value="{{id}}">
        <button type="submit" class="btn btn-outline-success">Save</button>
    </form>
{{/each}}