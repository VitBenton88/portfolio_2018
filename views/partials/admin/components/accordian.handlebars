<div class="row {{name}}-accordian">

    <div class="section-head alert alert-{{style}} d-flex justify-content-between align-items-center" role="alert" data-toggle="collapse" href="#{{name}}">
        <span>{{title}}</span>
    <div class="section-toggle-controls">
        <i class="fa fa-expand toggle-control" aria-hidden="true"></i>
        <i class="fa fa-minus toggle-control" aria-hidden="true"></i>
    </div>
    </div>

    <div id="{{name}}" class="collapse col-12">
        {{> (lookup . "content")}}
    </div>
    
</div>