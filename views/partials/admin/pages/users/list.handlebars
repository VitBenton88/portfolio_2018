<div class="row">
  <h5>Current Users</h4>
  <table class="table table-striped table-responsive-sm" id="users">
    <tr>
      <th>Username</th>
      <th>Email</th> 
      <th>Role</th>
      <th>Actions</th>
    </tr>
    {{#each users}}
      <tr>
        <td>{{this.username}}</td>
        <td>{{this.email}}</td>
        <td>{{#if this.admin}}Admin{{else}}User{{/if}}</td>
        <td>
          <a href="users/edit/{{this.id}}" class="btn btn-outline-info">Edit</a>
        </td>
      </tr>
    {{/each}}
  </table>
</div>