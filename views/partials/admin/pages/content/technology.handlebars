{{#each portfolio}}
    <div class="row">
        <div class="col-12">
            <h4>Frontend</h4>
        </div>
    </div>
    <div class="row">
        {{#each technology}}
            {{#eq this.type "Frontend"}}
                <div class="col-12 col-md-4 technology">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">Score: {{this.score}}</p>
                            <button class="btn btn-info btn-block" type="button" data-toggle="collapse" data-target="#technology-{{@key}}" aria-expanded="false" aria-controls="technology-item-{{@key}}">Edit</button>
                            <div class="collapse" id="technology-{{@key}}">
                                <br />
                                <div class="card card-body">
                                    <form action="/updatetechnology" method="POST" class="update-technology-form">
                                        <div class="form-group">
                                        <label for="title">Edit Technology</label>
                                        <small id="name-help" class="form-text text-muted">Name for this technology.</small>
                                        <input name="name" class="form-control" type="text" aria-describedby="name-help" value="{{this.name}}" placeholder="Enter new name for this tech ...">
                                        <small id="score-help" class="form-text text-muted">Score for this technology.</small>
                                        <input name="score" class="form-control" type="text" aria-describedby="score-help" value="{{this.score}}" placeholder="Enter new score for this tech...">
                                        </div>
                                        <input name="_id" type="hidden" value="{{../id}}">
                                        <input name="_technology" type="hidden" value="{{this.id}}">
                                        <input name="type" type="hidden" value="Frontend">
                                        <button type="submit" class="btn btn-primary btn-block">Update</button>
                                    </form>
                                    <form action="/deletetechnology" method="POST">
                                        <input name="_id" type="hidden" value="{{../id}}">
                                        <input name="_technology" type="hidden" value="{{../this.id}}">
                                        <button type="submit" class="btn btn-danger btn-block">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{/eq}}
        {{/each}}
        <div class="col-12 col-lg-4 technology add-technology">
            <div class="card card-body">
                <form action="/addtechnology" method="POST">
                    <div class="form-group">
                        <label for="title">Add Technology</label>
                        <small id="name-help" class="form-text text-muted">Name for this technology.</small>
                        <input name="name" class="form-control" type="text" aria-describedby="name-help" placeholder="Enter new name for this tech ...">
                        <small id="score-help" class="form-text text-muted">Score for this technology.</small>
                        <input name="score" class="form-control" type="text" aria-describedby="score-help" placeholder="Enter new score for this tech...">
                        <small id="type-help" class="form-text text-muted">Type for this technology.</small>
                    </div>
                    <input name="_id" type="hidden" value="{{id}}">
                    <input name="_technology" type="hidden" value="{{this.id}}">
                    <input name="type" type="hidden" value="Frontend">
                    <button type="submit" class="btn btn-success btn-block">Add</button>
                </form>
                <div class="add-item-overlay active d-flex align-items-center justify-content-center">
                    <div>
                        <i class="fa fa-plus" aria-hidden="true"></i>
                        <h5>Add</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/each}}

